<div class="container">
  <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <img src="../../assets/img/burger.png" alt="Burger" style="width:200px;height:200px;margin-top:50px" >
                <h1>Eat-Da-Burger!</h1>
            </div>
    </div>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/update?_method=PUT" method="POST">
          <input type="hidden" value="{{burger_name}}" name="burger_name" id="all-burger">
          <button type="submit">Devour It!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/update?_method=PUT" method="POST">
          <input type="hidden" value="{{burger_name}}" name="burger_name" id="devoured-burger">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <form class="create-update-form" action="/" method="POST" id="post-burger">
                   <div class="form-group ">
                      <textarea class="form-control" name="burger_name" rows="5" id="post-burger"></textarea>
                        <button type="submit" class="btn btn-default">Submit</button>
                  </div>
              </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h4>To enter a burger you want to eat, click the submit button.</h4>
            </div>
        </div>
    </div>


    <script>

  $(function() {
      $("#post-burger").on("submit", function(e) {
          e.preventDefault();
          console.log($(this).serialize());
          $.post("/", $(this).serialize(), function(res) {
              window.location.replace('/');
          });
      });
  });


    </script>